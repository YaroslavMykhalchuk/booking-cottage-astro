---
import LanguagePicker from './LanguagePicker.astro';
import { getLangFromUrl, useTranslations, useTranslatedPath, getPathWithoutLang } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
const currentPath = getPathWithoutLang(Astro.url);

const links = [
  { title: t('nav.home'),     href: '/' },
  { title: t('nav.cottage1'), href: '/cottage-1' },
  { title: t('nav.cottage2'), href: '/cottage-2' },
  { title: t('nav.rules'),    href: '/rules' },
  { title: t('nav.contact'),  href: '/contact' },
];
---

<nav class="navbar navbar-expand-md navbar-light bg-light" aria-label="Main navigation">
    <div class="container-fluid container">
        <a class="navbar-brand" href={translatePath('/')}>Booking Cottage</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav ms-auto mb-2 mb-md-0">
                {links.map((link) => {
                const active = link.href === currentPath;
                return (
                    <li class="nav-item">
                    <a class={`nav-link${active ? ' active' : ''}`} href={translatePath(link.href)}>
                        {link.title}
                    </a>
                    </li>
                );
                })}
            </ul>
            <LanguagePicker />
        </div>
    </div>
</nav>